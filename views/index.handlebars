<div class="container">
    <h1>Order Up!</h1>
    <hr>

    <form>

        <div class="form-group">
            <label for="burgerInput">What kind of burger would you like to eat?</label>
            <input type="text" class="form-control" name="burgerInput" id="burgerInput"
                placeholder="...sounds delicious">
            <button type="submit" id="submitBurger" value="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>

    <hr>
    <h2>Eat Da Burger?</h2>
    <ul>
        {{#each burgers}}
        {{#unless devour}}
        <li>
            <button type="button" class="btn btn-success" data-id="{{this.id}}" data-devour={{this.devour}}>
                {{this.name}}
            </button>
        </li>
        {{/unless}}
        {{/each}}
    </ul>

    <h2>Some Guy Ate Da Burger!</h2>
    <ul>
        {{#each buregers}}
        {{#if devour}}
        <li>
            <button type="button" class="btn btn-danger" data-id="{{this.id}}">
                {{this.name}}
            </button>
        </li>
        {{/if}}
        {{/each}}

    </ul>
</div>